<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotelOwner.HotelAdPayment">

    <ImageView
        android:id="@+id/hotelAdPaymentIV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hotel_ad_payment_topcontainer" />

    <ImageView
        android:id="@+id/hotelAdPaymentIV2"
        android:layout_width="383dp"
        android:layout_height="330dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hotelAdPaymentIV1"
        app:srcCompat="@drawable/payment_portal_image" />

    <TextView
        android:id="@+id/hotelAdPaymentTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Rs. 250"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hotelAdPaymentIV1" />

    <TextView
        android:id="@+id/hotelAdPaymentTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/HotelOwnerAddAdPaymentCrdNo"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAdPaymentIV1" />

    <EditText
        android:id="@+id/hotelAdPaymentET1"
        android:layout_width="329dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_squre"
        android:ems="10"
        android:hint="@string/HotelOwnerAddAdPaymentCrdNoHint"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="@dimen/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAdPaymentTV2" />

    <EditText
        android:id="@+id/hotelAdPaymentET2"
        android:layout_width="159dp"
        android:layout_height="52dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/form_squre"
        android:ems="10"
        android:hint="@string/HotelOwnerAddAdPaymentExpDateHint"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="@dimen/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAdPaymentTV2" />

    <EditText
        android:id="@+id/hotelAdPaymentET3"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_squre"
        android:ems="10"
        android:hint="@string/HotelOwnerAddAdPaymentCVVHint"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="@dimen/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAdPaymentTV3" />

    <TextView
        android:id="@+id/hotelAdPaymentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/HotelOwnerAddAdPaymentExpDate"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/hotelAdPaymentTV3"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAdPaymentET1" />

    <TextView
        android:id="@+id/hotelAdPaymentTV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="116dp"
        android:text="@string/HotelOwnerAddAdPaymentCVV"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAdPaymentET1" />

    <Button
        android:id="@+id/hotelAdPaymentButton"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_yellow"
        android:text="@string/HotelOwnerAddAdPaymentBtn"
        android:textColor="@color/TextColor"
        android:textSize="16sp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAdPaymentET3" />
</androidx.constraintlayout.widget.ConstraintLayout>