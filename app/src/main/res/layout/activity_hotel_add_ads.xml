<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotelOwner.HotelAddAds">

    <ImageView
        android:id="@+id/hotelAddAdBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nav_back_arrow" />

    <TextView
        android:id="@+id/hotelAddAdTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/HotelOwnerAddAdTitle"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toEndOf="@+id/hotelAddAdBackArrow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hotelAddAdNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:text="@string/HotelOwnerAddAdName"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdBackArrow" />

    <EditText
        android:id="@+id/hotelAddAdNameET"
        android:layout_width="@dimen/reg_form_width"
        android:layout_height="@dimen/reg_form_hight"
        android:layout_marginTop="28dp"
        android:background="@drawable/form_squre"
        android:ems="10"
        android:hint="@string/HotelOwnerAddAdName"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="@dimen/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdNameTV" />

    <TextView
        android:id="@+id/hotelAddAdTV38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/HotelOwnerAddAdText1"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdNameET" />

    <TextView
        android:id="@+id/hotelAddAdTV39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/HotelOwnerAddAdText4"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdTV38" />

    <ImageView
        android:id="@+id/hotelAddAdImageView"
        android:layout_width="371dp"
        android:layout_height="62dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdTV39"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/hotelAddAdButton1"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/btn_yellow"
        android:text="@string/HotelOwnerAddAdText2"
        android:textColor="@color/TextColor"
        android:textSize="16sp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdImageView" />

    <Button
        android:id="@+id/hotelAddAdButton2"
        android:layout_width="136dp"
        android:layout_height="51dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/btn_yellow"
        android:text="@string/HotelOwnerAddAdText5"
        android:textColor="@color/TextColor"
        android:textSize="16sp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdImageView" />

    <TextView
        android:id="@+id/hotelAddAdTV40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/HotelOwnerAddAdText3"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelAddAdImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>