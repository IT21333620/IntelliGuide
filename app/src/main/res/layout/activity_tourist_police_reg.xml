<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.HotelOwnerReg">

    <ImageView
        android:id="@+id/touristPoliceRegImg1"
        android:layout_width="425dp"
        android:layout_height="92dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-19dp"
        android:rotation="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_1" />

    <ImageView
        android:id="@+id/touristPoliceRegImg2"
        android:layout_width="433dp"
        android:layout_height="91dp"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="-19dp"
        android:rotation="181"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vector_1" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="781dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/touristPoliceRegTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/register"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/headings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.469"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/touristPoliceRegTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="84dp"
                android:text="@string/TPoliceRegTitle"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTitle" />

            <TextView
                android:id="@+id/touristPoliceRegTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="100dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTitle" />

            <EditText
                android:id="@+id/touristPoliceRegEditText1"
                android:layout_width="@dimen/reg_form_width"
                android:layout_height="@dimen/reg_form_hight"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/form_squre"
                android:ems="10"
                android:hint="@string/name_hint"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView1" />

            <TextView
                android:id="@+id/touristPoliceRegTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="@string/TPoliceId"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegEditText1" />

            <EditText
                android:id="@+id/touristPoliceRegEditText2"
                android:layout_width="@dimen/reg_form_width"
                android:layout_height="@dimen/reg_form_hight"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/form_squre"
                android:ems="10"
                android:hint="@string/TPoliceIdHint"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView2" />

            <TextView
                android:id="@+id/touristPoliceRegTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="@string/TPoliceStation"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegEditText2" />

            <EditText
                android:id="@+id/touristPoliceRegEditText3"
                android:layout_width="@dimen/reg_form_width"
                android:layout_height="@dimen/reg_form_hight"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/form_squre"
                android:ems="10"
                android:hint="@string/TPoliceStationHint"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView3" />


            <TextView
                android:id="@+id/touristPoliceRegTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegEditText3" />

            <EditText
                android:id="@+id/touristPoliceRegEditText6"
                android:layout_width="@dimen/reg_form_width"
                android:layout_height="@dimen/reg_form_hight"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/form_squre"
                android:ems="10"
                android:hint="@string/sample_email"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView6" />

            <TextView
                android:id="@+id/touristPoliceRegTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegEditText6" />

            <EditText
                android:id="@+id/touristPoliceRegEditText7"
                android:layout_width="@dimen/reg_form_width"
                android:layout_height="@dimen/reg_form_hight"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/form_squre"
                android:ems="10"
                android:hint="@string/sample_password"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView7" />

            <TextView
                android:id="@+id/touristPoliceRegTextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="@string/confirm_pass"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegEditText7" />

            <EditText
                android:id="@+id/touristPoliceRegEditText8"
                android:layout_width="@dimen/reg_form_width"
                android:layout_height="@dimen/reg_form_hight"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/form_squre"
                android:ems="10"
                android:hint="@string/sample_password"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="@dimen/regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView8" />

            <Button
                android:id="@+id/touristPoliceRegButton1"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/btn_yellow"
                android:text="@string/singup"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/button_heading"
                app:circularflow_radiusInDP="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegEditText8" />

            <TextView
                android:id="@+id/touristPoliceRegTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/or"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegButton1" />

            <TextView
                android:id="@+id/touristPoliceRegTextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/have_account"
                android:textColor="@color/black"
                android:textSize="@dimen/regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView9" />

            <Button
                android:id="@+id/touristPoliceRegButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_blue"
                android:backgroundTint="@color/TextColor"
                android:text="@string/signin"
                android:textColor="@color/btn_yellow"
                android:textSize="@dimen/regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/touristPoliceRegTextView10" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


