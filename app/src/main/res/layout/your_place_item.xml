<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#dbe9f9"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SocialMediaPlaceTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:text="Textview"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/SocialMediaPlaceIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/SocialMediaPlaceTV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tourist_post_delete"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/post_delete_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="300dp">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="39dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/social_media_likes_icon" />

            <TextView
                android:id="@+id/SocialMediaPlaceTV3"
                android:textColor="@color/black"
                android:layout_width="94dp"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
